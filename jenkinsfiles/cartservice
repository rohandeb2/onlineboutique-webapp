pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'master', url: 'https://github.com/rohandeb2/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/cartservice/src') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t cartservice .'
                    }
                }
            }
        }
       stage('Login to ECR and Push Image') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    sh '''
                        echo "üîê Logging into AWS ECR..."
                       aws ecr get-login-password --region us-west-2 | docker login --username AWS --password-stdin 889501007925.dkr.ecr.us-west-2.amazonaws.com

                        echo "üè∑Ô∏è Tagging image..."
                        docker tag cartservice:latest 889501007925.dkr.ecr.us-west-2.amazonaws.com/cartservice:latest
                        echo "üì§ Pushing image to ECR..."
                        docker push 889501007925.dkr.ecr.us-west-2.amazonaws.com/cartservice:latest
                    '''
                }
            }
        }

        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_EMAIL = "ayushmanndeb8@gmail.com@gmail.com"
                GIT_USER_NAME = "rohandeb2"
                IMAGE_NAME = "cartservice"
                REPO_URL = "889501007925.dkr.ecr.us-west-2.amazonaws.com/cartservice"
                YAML_FILE = "cartservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'git-cred', variable: 'GIT_TOKEN')]) {
                        sh '''
                            set -e
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"

                            echo "üîÑ Pulling latest changes..."
                            git fetch origin master
                            git pull origin master --rebase || echo "No updates from remote"

                            echo "üîß Updating deployment file..."
                            if [ -f "${YAML_FILE}" ]; then
                                sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            else
                                echo "‚ùå ERROR: ${YAML_FILE} not found!"
                                exit 1
                            fi

                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} image to version ${BUILD_NUMBER}" || echo "No changes to commit"

                            echo "üöÄ Pushing updated file to GitHub..."
                            git push https://${GIT_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master || echo "‚ö†Ô∏è Push skipped (no new commits)"
                        '''
                    }
                }
            }
        }
    }
}
